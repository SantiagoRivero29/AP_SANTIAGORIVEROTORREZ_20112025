<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ListaActivity">

    <!-- Sección Superior con EditTexts en scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/llTopInputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp">

            <!-- Encabezado de la sección -->
            <TextView
                android:id="@+id/tvInputSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_section_title"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="12dp"/>

            <!-- Nombre del producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input_container"
                android:padding="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_producto"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_producto"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="textCapSentences"/>

            </LinearLayout>

            <!-- Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input_container"
                android:padding="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_descripcion"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input_container"
                android:padding="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domicilio"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etDomicilio"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="numberDecimal"/>

            </LinearLayout>

            <!-- Cantidad y Unidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_input_container"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etObservaciones"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:background="@android:color/transparent"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_input_container"
                    android:padding="4dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacto."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etContacto"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:background="@android:color/transparent"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="textCapWords"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_input_container"
                    android:padding="4dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abreviatura."
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/etAbreviatura"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:background="@android:color/transparent"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="textCapWords"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Botón de acción -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddItem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/btn_add_item"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_accent"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Línea divisoria -->
    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bg_divider" />

    <!-- Sección Inferior con ListView -->
    <LinearLayout
        android:id="@+id/llBottomListSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/background_light">

        <!-- Encabezado de la lista -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/background_light">

            <TextView
                android:id="@+id/tvListTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/list_title"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_list"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_count"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"/>

        </LinearLayout>

        <!-- ListView -->
        <ListView
            android:id="@+id/lvItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/divider_color"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            tools:listitem="@layout/item_list"/>

        <!-- Mensaje cuando está vacío -->
        <TextView
            android:id="@+id/tvEmptyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_list_message"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:visibility="gone"
            android:drawableTop="@drawable/ic_empty_list"
            android:drawablePadding="16dp"
            android:padding="40dp"/>

    </LinearLayout>
</LinearLayout>